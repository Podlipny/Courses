{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "removeComments": true,    
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}