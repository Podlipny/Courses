@model SamuraiApp.Domain.Samurai

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Samurai</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SecretIdentity.Id" />
            <input type="hidden" asp-for="SecretIdentity.SamuraiId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecretIdentity.RealName" class="control-label"></label>
                <input asp-for="SecretIdentity.RealName" class="form-control" />
                <span asp-validation-for="SecretIdentity.RealName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<hr style= " border-style:solid; border-width: 1.5px;"/>

<table class="table">
    <thead>
        <tr>
            <th>Text</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.Quotes)
    {
        <tr>
            <td>@item.Text </td>
            <td> @Html.ActionLink("Edit", "Edit", "Quotes", new { id = item.Id, samuraiId = item.SamuraiId }, null)</td>
        </tr>
    }
</table>
<div>

    @Html.ActionLink("New Quote", "Create", "Quotes", new { samuraiId = Model.Id }, null)  |
    <a asp-action="Index">Back to Samurais List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
